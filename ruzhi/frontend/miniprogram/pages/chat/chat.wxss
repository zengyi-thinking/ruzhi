/* AI对话页面样式 */

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 人物选择页面 */
.character-selection {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 人物卡片网格 */
.characters-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.character-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.character-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border-color: #667eea;
}

.character-avatar {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
  margin-right: 20rpx;
}

.character-dynasty {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #667eea;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.character-info {
  flex: 1;
}

.character-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.character-title {
  font-size: 24rpx;
  color: #667eea;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.character-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.character-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

.character-stats {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 历史记录区域 */
.history-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.section-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.history-count {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  font-size: 24rpx;
  color: #ccc;
}

.recent-conversations {
  padding: 20rpx 30rpx 30rpx;
}

.conversation-preview {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.3s ease;
}

.conversation-preview:last-child {
  border-bottom: none;
}

.conversation-preview:active {
  background: #f8f8f8;
}

.conversation-character {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.conversation-preview-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.conversation-time {
  font-size: 22rpx;
  color: #999;
}

/* 对话界面 */
.chat-interface {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.back-text {
  font-size: 26rpx;
}

.character-info-header {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.header-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 16rpx;
}

.header-character-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-character-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.header-character-status {
  font-size: 22rpx;
  opacity: 0.8;
}

.header-right {
  font-size: 32rpx;
}

.menu-icon {
  transform: rotate(90deg);
}

/* 消息容器 */
.messages-container {
  flex: 1;
  background: #f8f9fa;
  padding: 20rpx;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 欢迎消息 */
.welcome-message {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 30rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.welcome-avatar {
  flex-shrink: 0;
}

.welcome-avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #667eea;
}

.welcome-content {
  flex: 1;
}

.welcome-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.welcome-suggestions {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
}

.suggestion-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.suggestion-item {
  display: block;
  padding: 12rpx 16rpx;
  margin-bottom: 8rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #667eea;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-item:active {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.user-message {
  flex-direction: row-reverse;
}

.message-avatar {
  flex-shrink: 0;
}

.message-avatar-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #667eea;
}

.message-content {
  flex: 1;
  max-width: 80%;
}

.user-message .message-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.message-bubble {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e8e8e8;
  position: relative;
}

.user-message .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
}

.thinking-process {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.thinking-label {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.thinking-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  font-style: italic;
}

.message-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  padding: 0 8rpx;
}

.user-message .message-meta {
  justify-content: flex-end;
}

.message-time {
  font-size: 20rpx;
  color: #999;
}

.message-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 20rpx;
  color: #667eea;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  background: rgba(102, 126, 234, 0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.action-btn:active {
  background: rgba(102, 126, 234, 0.2);
}

/* 正在输入指示器 */
.typing-indicator {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  opacity: 0.8;
}

.typing-avatar-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #667eea;
}

.typing-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e8e8e8;
}

.typing-dots {
  display: flex;
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #667eea;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}
.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes typing {
  0%,
  80%,
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.typing-text {
  font-size: 22rpx;
  color: #999;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-top: 1rpx solid #e8e8e8;
  padding: 20rpx;
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid #e8e8e8;
}

.message-input {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.5;
  max-height: 120rpx;
  background: transparent;
  border: none;
  outline: none;
}

.input-actions {
  flex-shrink: 0;
}

.send-btn {
  background: #ccc;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.send-btn:disabled {
  background: #ccc;
  color: #999;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.quick-action {
  padding: 12rpx 20rpx;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.quick-action:active {
  background: rgba(102, 126, 234, 0.2);
  border-color: #667eea;
}

/* 弹窗样式 */
.chat-menu-modal,
.history-modal,
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.chat-menu-modal.show,
.history-modal.show,
.settings-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.chat-menu-modal.show .modal-content,
.history-modal.show .modal-content,
.settings-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.modal-title,
.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.close-btn,
.search-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-btn {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.modal-body,
.menu-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 20rpx 30rpx 40rpx;
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

/* 历史记录列表 */
.empty-history {
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.history-item:active {
  background: #e9ecef;
  transform: translateY(-2rpx);
}

.history-character {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.history-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #667eea;
}

.history-character-name {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 500;
}

.history-content {
  flex: 1;
}

.history-preview {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-count {
  font-size: 22rpx;
  color: #667eea;
}

.history-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  background: #fff2f0;
  color: #ff4d4f;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
}

/* 设置弹窗 */
.setting-section {
  margin-bottom: 30rpx;
}

.setting-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.setting-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.option-item.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.option-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.setting-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.loading-spinner {
  font-size: 60rpx;
  animation: spin 2s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .character-card {
    padding: 24rpx;
  }

  .character-name {
    font-size: 28rpx;
  }

  .message-bubble {
    padding: 16rpx 20rpx;
  }

  .message-text {
    font-size: 26rpx;
  }
}

/* 古文样式增强 */
.ancient-text {
  font-family: "STKaiti", "KaiTi", "楷体", serif;
  line-height: 1.8;
  letter-spacing: 2rpx;
}

.message-bubble .ancient-text {
  font-size: 30rpx;
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .chat-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }

  .page-header,
  .character-card,
  .history-section {
    background: rgba(52, 73, 94, 0.95);
    color: #ecf0f1;
  }

  .character-name,
  .title-text {
    color: #ecf0f1;
  }

  .character-desc,
  .header-subtitle {
    color: #bdc3c7;
  }
}
