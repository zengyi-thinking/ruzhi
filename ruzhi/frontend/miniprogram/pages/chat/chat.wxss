/* AI对话页面样式 */

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.chat-header {
  background: #1890ff;
  color: #fff;
  padding: 20rpx;
  text-align: center;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 600;
}

.chat-content {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.chat-input {
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #e8e8e8;
}
