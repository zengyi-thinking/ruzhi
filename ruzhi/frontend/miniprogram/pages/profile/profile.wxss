/* 个人中心页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
}

.traditional-bg {
  background-image: radial-gradient(
      circle at 20% 80%,
      rgba(120, 119, 198, 0.3) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 119, 198, 0.3) 0%,
      transparent 50%
    );
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-avatar-section {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #f0f0f0;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #7f8c8d;
}

.login-section {
  margin-left: 20rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.stats-toggle {
  display: flex;
  align-items: center;
  color: #3498db;
  font-size: 28rpx;
}

.toggle-text {
  margin-right: 10rpx;
}

.toggle-icon {
  font-size: 24rpx;
}

.stats-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #7f8c8d;
}

.stats-detail {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #7f8c8d;
}

.detail-value {
  color: #2c3e50;
  font-weight: bold;
}

.stats-action {
  text-align: center;
}

.action-btn {
  background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 成就卡片 */
.achievements-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.view-all {
  color: #3498db;
  font-size: 28rpx;
}

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.achievement-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 5rpx;
}

.achievement-date {
  font-size: 24rpx;
  color: #27ae60;
}

/* 历史记录卡片 */
.history-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.history-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.history-content {
  flex: 1;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.history-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 24rpx;
  color: #bdc3c7;
}

.history-points {
  font-size: 28rpx;
  color: #27ae60;
  font-weight: bold;
}

/* 功能菜单卡片 */
.menu-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.menu-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.menu-arrow {
  font-size: 32rpx;
  color: #bdc3c7;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-overview {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }

  .stat-item {
    padding: 25rpx 15rpx;
  }

  .stat-number {
    font-size: 40rpx;
  }
}
