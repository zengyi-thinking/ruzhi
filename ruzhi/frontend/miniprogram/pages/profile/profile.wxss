/* 个人中心页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
}

.traditional-bg {
  background-image: radial-gradient(
      circle at 20% 80%,
      rgba(120, 119, 198, 0.3) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 119, 198, 0.3) 0%,
      transparent 50%
    );
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-avatar-section {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #f0f0f0;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #7f8c8d;
}

.login-section {
  margin-left: 20rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.stats-toggle {
  display: flex;
  align-items: center;
  color: #3498db;
  font-size: 28rpx;
}

.toggle-text {
  margin-right: 10rpx;
}

.toggle-icon {
  font-size: 24rpx;
}

.stats-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #7f8c8d;
}

.stats-detail {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #7f8c8d;
}

.detail-value {
  color: #2c3e50;
  font-weight: bold;
}

.stats-action {
  text-align: center;
}

.action-btn {
  background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 成就卡片 */
.achievements-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.view-all {
  color: #3498db;
  font-size: 28rpx;
}

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.achievement-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 5rpx;
}

.achievement-date {
  font-size: 24rpx;
  color: #27ae60;
}

/* 历史记录卡片 */
.history-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.history-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.history-content {
  flex: 1;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.history-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 24rpx;
  color: #bdc3c7;
}

.history-points {
  font-size: 28rpx;
  color: #27ae60;
  font-weight: bold;
}

/* 功能菜单卡片 */
.menu-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 5rpx;
}

.menu-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.menu-arrow {
  font-size: 32rpx;
  color: #bdc3c7;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* AI设置弹窗样式 */
.ai-settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.modal-close {
  font-size: 32rpx;
  color: #7f8c8d;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.setting-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.input-group {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.api-key-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  background: transparent;
  border: none;
}

.toggle-visibility {
  font-size: 32rpx;
  padding: 10rpx;
  color: #7f8c8d;
}

.api-key-help {
  background: #e8f4fd;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.help-text {
  font-size: 26rpx;
  color: #3498db;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.help-step {
  font-size: 24rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 5rpx;
  padding-left: 20rpx;
}

.connection-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
}

.status-indicator.connected .status-text {
  color: #27ae60;
}

.status-indicator.disconnected .status-text {
  color: #e74c3c;
}

.test-btn {
  background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
}

.test-btn[disabled] {
  background: #bdc3c7;
  color: #7f8c8d;
}

.connection-info {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 15rpx;
}

.info-text {
  font-size: 24rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 5rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  margin-right: 20rpx;
}

.setting-name {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
  display: block;
  margin-bottom: 5rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

.usage-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #3498db;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn {
  flex: 1;
  background: #ecf0f1;
  color: #7f8c8d;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.save-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.save-btn[disabled] {
  background: #bdc3c7;
  color: #7f8c8d;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-overview {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }

  .stat-item {
    padding: 25rpx 15rpx;
  }

  .stat-number {
    font-size: 40rpx;
  }

  .modal-content {
    width: 95%;
  }

  .usage-stats {
    grid-template-columns: 1fr;
  }
}
