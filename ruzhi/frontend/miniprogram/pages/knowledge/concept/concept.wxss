/* 概念详情页面样式 */

.concept-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.concept-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.concept-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 20rpx;
  font-family: 'STSong', 'SimSun', serif;
}

.concept-category {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.concept-definition {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.concept-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.relations-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.relation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.relation-item:last-child {
  border-bottom: none;
}

.relation-item:active {
  background-color: #f8f8f8;
}

.relation-info {
  flex: 1;
}

.relation-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.relation-type {
  font-size: 22rpx;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.relation-desc {
  font-size: 22rpx;
  color: #999;
}

.relation-arrow {
  color: #ccc;
}
