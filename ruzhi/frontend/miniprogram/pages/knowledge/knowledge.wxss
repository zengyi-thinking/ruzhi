/* 知识图谱页面样式 */

.knowledge-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.knowledge-header {
  margin-bottom: 30rpx;
}

.knowledge-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.search-section {
  margin-bottom: 30rpx;
}

.concept-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.concept-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.concept-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.concept-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
