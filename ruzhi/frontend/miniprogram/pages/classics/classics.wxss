/* 经典库页面样式 */
.classics-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 30rpx;
  position: relative;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 25rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 15rpx 0;
}

.search-btn {
  padding: 10rpx;
  margin-left: 10rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #666;
}

.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  margin-top: 10rpx;
}

.suggestion-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
}

.suggestion-type {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

/* 分类区域 */
.category-section {
  margin-bottom: 30rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 25rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
}

.category-item.active .category-name {
  color: white;
}

/* 经典书籍区域 */
.classics-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.section-more {
  font-size: 28rpx;
  color: #3498db;
}

.sort-options {
  display: flex;
  gap: 20rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  background: #f0f0f0;
}

.sort-item.active {
  background: #3498db;
  color: white;
}

/* 推荐书籍 */
.recommended-scroll {
  white-space: nowrap;
  margin-bottom: 40rpx;
}

.recommended-list {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.recommended-book {
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  min-width: 280rpx;
}

.book-cover {
  width: 240rpx;
  height: 160rpx;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  background: #f0f0f0;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.book-author {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.book-stats {
  display: flex;
  gap: 15rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 书籍网格 */
.books-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.book-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.book-card:active {
  transform: scale(0.98);
}

.book-cover-large {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.book-content {
  flex: 1;
}

.book-header {
  margin-bottom: 15rpx;
}

.book-title-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
  display: block;
}

.book-tags {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.book-tag {
  font-size: 22rpx;
  color: #3498db;
  background: rgba(52, 152, 219, 0.1);
  padding: 5rpx 12rpx;
  border-radius: 12rpx;
}

.book-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.book-author-large {
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.book-dynasty {
  font-size: 24rpx;
  color: #95a5a6;
  background: #ecf0f1;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.book-description {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-footer {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.book-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #27ae60;
}

.progress-bar {
  height: 6rpx;
  background: #ecf0f1;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.book-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  text-align: center;
}

.read-btn {
  background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
  color: white;
  flex: 1;
  margin-right: 15rpx;
}

.favorite-btn {
  font-size: 36rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.favorite-btn.active {
  background: rgba(231, 76, 60, 0.1);
}

/* 加载和空状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.loading-spinner {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .books-grid {
    gap: 20rpx;
  }

  .book-card {
    padding: 20rpx;
  }

  .book-title-large {
    font-size: 32rpx;
  }
}
