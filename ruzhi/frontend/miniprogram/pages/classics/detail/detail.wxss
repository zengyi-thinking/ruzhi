/* 经典详情页面样式 */

.detail-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.classic-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.classic-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
}

.classic-author {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.classic-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.chapters-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chapter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chapter-item:last-child {
  border-bottom: none;
}

.chapter-item:active {
  background-color: #f8f8f8;
}

.chapter-info {
  flex: 1;
}

.chapter-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.chapter-meta {
  font-size: 22rpx;
  color: #999;
}

.chapter-arrow {
  color: #ccc;
}
