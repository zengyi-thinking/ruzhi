/* OCR识别页面样式 */

.ocr-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航 */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-actions {
  padding: 10rpx;
}

/* 图片选择区域 */
.image-section {
  margin-bottom: 30rpx;
}

.image-container {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  background: #fafafa;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  background: #f8f8f8;
}

.image-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 30rpx;
}

.mode-item {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.mode-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.mode-desc {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 40rpx;
}

/* 历史记录弹窗 */
.history-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.history-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.history-list {
  flex: 1;
  padding: 20rpx;
}

.empty-history {
  padding: 80rpx 40rpx;
  text-align: center;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.history-item:active {
  background-color: #f8f8f8;
}

.history-content {
  flex: 1;
  margin-right: 20rpx;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-confidence {
  font-size: 22rpx;
  color: #1890ff;
}

.history-actions {
  padding: 10rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .upload-area {
    padding: 60rpx 30rpx;
  }
  
  .history-item {
    padding: 20rpx;
  }
}
