    "zhengming": {
      "id": "zhengming",
      "name": "正名",
      "category": "儒家思想",
      "definition": "纠正名称，使名实相符，是孔子政治哲学的重要概念",
      "classical_definition": "名不正，则言不顺；言不顺，则事不成。（《论语·子路》）",
      "modern_interpretation": "正名强调概念的准确性和一致性，在现代社会体现为规范用词、明确定义、统一标准的重要性。",
      "historical_evolution": [
        {
          "period": "春秋时期",
          "description": "孔子提出正名思想，强调名实相符的重要性"
        },
        {
          "period": "战国时期",
          "description": "荀子发展正名理论，强调约定俗成"
        }
      ],
      "key_figures": ["confucius", "xunzi"],
      "related_texts": ["lunyu"],
      "modern_applications": [
        {
          "field": "法律",
          "application": "法律条文的准确定义和统一解释"
        },
        {
          "field": "管理",
          "application": "明确职责分工和工作标准"
        },
        {
          "field": "教育",
          "application": "概念教学和术语规范"
        }
      ],
      "practical_examples": [
        "准确使用专业术语",
        "明确工作职责和目标",
        "规范合同条款和协议"
      ],
      "misconceptions": [
        "正名不是咬文嚼字",
        "正名强调的是实质而非形式",
        "正名需要考虑实际情况"
      ],
      "difficulty_level": "中级",
      "importance_score": 7
    }
