/* OCR识别页面样式 */

.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 识别模式 */
.mode-section {
  margin-bottom: 30rpx;
}

.mode-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.mode-item {
  text-align: center;
  padding: 25rpx 15rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 15rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.mode-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  transform: scale(1.02);
}

.mode-item:active {
  transform: scale(0.98);
}

.mode-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.mode-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.upload-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  transition: transform 0.3s ease;
}

.upload-btn:active {
  transform: scale(0.95);
}

.upload-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
}

.upload-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 已选择图片 */
.selected-image {
  margin-top: 20rpx;
  text-align: center;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.image-actions {
  display: flex;
  gap: 15rpx;
  justify-content: center;
}

/* 识别结果 */
.result-section {
  margin-bottom: 30rpx;
}

.result-text {
  margin-top: 20rpx;
}

.text-content {
  background: #f8f9fa;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #667eea;
}

.result-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 25rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #666;
}

.meta-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.result-actions .action-btn {
  flex: 1;
  min-width: 120rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
}

/* AI解读结果 */
.interpretation-section {
  margin-bottom: 30rpx;
}

.interpretation-content {
  margin-top: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  padding: 25rpx;
  border-radius: 15rpx;
  border-left: 4rpx solid #28a745;
}

.interpretation-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.interpretation-meta {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e8e8e8;
}

/* 历史记录 */
.history-section {
  margin-bottom: 30rpx;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}

.history-content {
  flex: 1;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.history-meta {
  display: flex;
  gap: 20rpx;
}

.history-time,
.history-confidence {
  font-size: 22rpx;
  color: #999;
}

.history-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .mode-grid {
    grid-template-columns: 1fr;
  }
  
  .upload-buttons {
    flex-direction: column;
  }
  
  .result-actions {
    flex-direction: column;
  }
  
  .result-actions .action-btn {
    flex: none;
  }
}
