/* AI对话页面样式 */

.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 人物选择 */
.characters-section {
  margin-bottom: 30rpx;
}

.characters-grid {
  margin-top: 20rpx;
}

.character-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.character-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  transform: scale(1.02);
}

.character-item:active {
  transform: scale(0.98);
}

.character-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 3rpx solid #667eea;
}

.character-avatar image {
  width: 100%;
  height: 100%;
}

.character-info {
  flex: 1;
  margin-right: 15rpx;
}

.character-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.character-title {
  font-size: 24rpx;
  color: #667eea;
  margin-bottom: 5rpx;
}

.character-period {
  font-size: 22rpx;
  color: #999;
}

.character-specialty {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.specialty-tag {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  padding: 5rpx 12rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  text-align: center;
  white-space: nowrap;
}

/* 对话历史 */
.conversations-section {
  margin-bottom: 30rpx;
}

.conversations-list {
  margin-top: 20rpx;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.conversation-item:last-child {
  border-bottom: none;
}

.conversation-item:active {
  background-color: #f8f9fa;
}

.conversation-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid #667eea;
}

.conversation-avatar image {
  width: 100%;
  height: 100%;
}

.conversation-content {
  flex: 1;
}

.conversation-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.conversation-preview {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conversation-meta {
  display: flex;
  gap: 20rpx;
}

.conversation-time,
.conversation-count {
  font-size: 22rpx;
  color: #999;
}

.conversation-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 推荐话题 */
.topics-section {
  margin-bottom: 30rpx;
}

.topics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.topic-item {
  text-align: center;
  padding: 25rpx 15rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 20rpx;
  color: white;
  transition: transform 0.3s ease;
}

.topic-item:active {
  transform: scale(0.95);
}

.topic-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.topic-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.topic-desc {
  font-size: 22rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 人物介绍 */
.character-intro {
  margin-bottom: 30rpx;
}

.intro-content {
  margin-top: 20rpx;
}

.intro-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.intro-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 25rpx;
  border: 4rpx solid #667eea;
}

.intro-avatar image {
  width: 100%;
  height: 100%;
}

.intro-basic {
  flex: 1;
}

.intro-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.intro-title {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 5rpx;
}

.intro-period {
  font-size: 24rpx;
  color: #999;
}

.intro-description {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 25rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.intro-achievements {
  margin-top: 20rpx;
}

.achievement-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.achievement-list {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 15rpx;
}

.achievement-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.achievement-item:last-child {
  margin-bottom: 0;
}

/* 开始对话按钮 */
.start-chat-section {
  margin-bottom: 30rpx;
}

.start-chat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: transform 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.start-chat-btn:active {
  transform: scale(0.98);
}

.chat-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.chat-text {
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #666;
}

.empty-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .topics-grid {
    grid-template-columns: 1fr;
  }
  
  .character-item {
    flex-direction: column;
    text-align: center;
  }
  
  .character-avatar {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  .character-specialty {
    flex-direction: row;
    justify-content: center;
    margin-top: 10rpx;
  }
}
