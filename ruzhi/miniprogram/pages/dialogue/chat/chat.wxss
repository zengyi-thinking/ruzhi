/* AI对话聊天页面样式 */

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 聊天头部 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.character-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.character-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.character-details {
  flex: 1;
}

.character-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.character-title {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.character-status {
  font-size: 22rpx;
  opacity: 0.7;
}

.chat-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: background-color 0.3s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 聊天消息区域 */
.chat-messages {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 欢迎消息 */
.welcome-message {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
}

.welcome-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #667eea;
}

.welcome-avatar image {
  width: 100%;
  height: 100%;
}

.welcome-content {
  flex: 1;
}

.welcome-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.welcome-suggestions {
  margin-top: 20rpx;
}

.suggestion-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.suggestions-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.suggestion-item {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: transform 0.3s ease;
}

.suggestion-item:active {
  transform: scale(0.95);
}

/* 消息列表 */
.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
}

/* AI消息 */
.ai-message-content {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
  max-width: 80%;
}

.ai-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #667eea;
  flex-shrink: 0;
}

.ai-avatar image {
  width: 100%;
  height: 100%;
}

.ai-bubble {
  background: white;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  padding: 20rpx;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.ai-bubble::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: -8rpx;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-right-color: white;
  border-bottom-color: white;
}

.ai-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 10rpx;
}

/* 用户消息 */
.user-message-content {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
  max-width: 80%;
  margin-left: auto;
  flex-direction: row-reverse;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #f093fb;
  flex-shrink: 0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-bubble {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border-radius: 20rpx 20rpx 8rpx 20rpx;
  padding: 20rpx;
  position: relative;
}

.user-bubble::before {
  content: '';
  position: absolute;
  bottom: 0;
  right: -8rpx;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-left-color: #f5576c;
  border-bottom-color: #f5576c;
}

.user-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

/* 消息元信息 */
.message-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.message-time {
  font-size: 20rpx;
  opacity: 0.7;
}

.message-actions {
  display: flex;
  gap: 10rpx;
}

.action-icon {
  font-size: 24rpx;
  padding: 5rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.action-icon:active {
  background: rgba(0, 0, 0, 0.1);
}

.message-status {
  font-size: 20rpx;
  opacity: 0.7;
}

/* 正在输入指示器 */
.typing-indicator {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
  max-width: 80%;
  margin-bottom: 20rpx;
}

.typing-bubble {
  background: white;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  padding: 20rpx;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.typing-bubble::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: -8rpx;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-right-color: white;
  border-bottom-color: white;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 输入区域 */
.chat-input-area {
  background: white;
  border-top: 1rpx solid #e8e8e8;
  padding: 20rpx;
}

/* 快捷回复 */
.quick-replies {
  margin-bottom: 15rpx;
}

.quick-replies-scroll {
  white-space: nowrap;
}

.quick-replies-list {
  display: inline-flex;
  gap: 10rpx;
  padding: 10rpx 0;
}

.quick-reply-item {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e8e8e8;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.quick-reply-item:active {
  background: #667eea;
  color: white;
  transform: scale(0.95);
}

/* 输入框 */
.input-container {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.input-box {
  flex: 1;
  position: relative;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e8e8e8;
}

.message-input {
  width: 100%;
  min-height: 40rpx;
  max-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: transparent;
  border: none;
  outline: none;
}

.input-counter {
  position: absolute;
  bottom: 5rpx;
  right: 15rpx;
  font-size: 20rpx;
  color: #999;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  background: #e8e8e8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.05);
}

.send-icon {
  font-size: 32rpx;
}

/* 功能按钮 */
.function-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.function-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.function-btn:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
