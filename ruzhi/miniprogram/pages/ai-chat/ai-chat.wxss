/* AI对话页面样式 */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 人物头部信息 */
.character-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.character-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
}

.character-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.character-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.character-title {
  font-size: 24rpx;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 人物选择器 */
.character-selector {
  flex: 1;
  padding: 40rpx 30rpx;
}

.selector-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.characters-list {
  height: 100%;
}

.character-item {
  display: flex;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.character-item.selected {
  background: #e3f2fd;
  border: 2rpx solid #2196f3;
}

.character-item-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.character-item-info {
  flex: 1;
}

.character-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.character-item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  margin-bottom: 15rpx;
}

.character-specialties {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.specialty-tag {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
}

/* 消息容器 */
.messages-container {
  flex: 1;
  padding: 20rpx;
  background: #f5f5f5;
}

/* 消息项 */
.message-item {
  margin-bottom: 30rpx;
}

/* 系统消息 */
.system-message {
  text-align: center;
  padding: 20rpx;
}

.system-text {
  font-size: 24rpx;
  color: #999;
  background: rgba(255,255,255,0.8);
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 用户消息 */
.user-message {
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
  gap: 15rpx;
}

.user-bubble {
  background: #007aff;
  color: white;
  max-width: 70%;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

/* 助手消息 */
.assistant-message {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.assistant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.assistant-bubble {
  background: white;
  color: #333;
  max-width: 70%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 消息气泡 */
.message-bubble {
  padding: 20rpx 25rpx;
  border-radius: 25rpx;
  position: relative;
  word-wrap: break-word;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
}

.message-time {
  font-size: 20rpx;
  opacity: 0.7;
  margin-top: 10rpx;
  display: block;
}

/* 打字指示器 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 10rpx;
}

.typing-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ccc;
  border-radius: 50%;
  animation: typing 1.4s ease-in-out infinite both;
}

.typing-dot:nth-child(1) { animation-delay: -0.32s; }
.typing-dot:nth-child(2) { animation-delay: -0.16s; }
.typing-dot:nth-child(3) { animation-delay: 0s; }

@keyframes typing {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 消息详情 */
.message-details {
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.quality-indicators {
  display: flex;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.quality-chip, .time-chip {
  padding: 6rpx 12rpx;
  background: #f0f0f0;
  border-radius: 15rpx;
  font-size: 20rpx;
  color: #666;
}

.rag-info {
  margin-bottom: 10rpx;
}

.rag-text {
  font-size: 22rpx;
  color: #2196f3;
}

.thinking-process {
  background: #f8f9fa;
  padding: 15rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.thinking-title {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.thinking-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 消息操作 */
.message-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.action-button {
  font-size: 22rpx;
  color: #666;
  padding: 8rpx 12rpx;
  border-radius: 15rpx;
  background: #f0f0f0;
  transition: all 0.3s ease;
}

.action-button.active {
  background: #2196f3;
  color: white;
}

/* 正在输入 */
.typing-container {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.typing-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.typing-bubble {
  background: white;
  padding: 20rpx 25rpx;
  border-radius: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.typing-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.typing-animation {
  display: flex;
  gap: 8rpx;
}

/* 错误消息 */
.error-message {
  text-align: center;
  padding: 20rpx;
}

.error-text {
  font-size: 26rpx;
  color: #f44336;
  background: #ffebee;
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: flex-end;
  padding: 20rpx 30rpx;
  background: white;
  border-top: 1rpx solid #eee;
  gap: 15rpx;
}

.input-wrapper {
  flex: 1;
  position: relative;
}

.message-input {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.input-counter {
  position: absolute;
  bottom: 8rpx;
  right: 15rpx;
  font-size: 20rpx;
  color: #999;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ccc;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-button.active {
  background: #007aff;
}

.send-button.disabled {
  background: #ccc;
}

.send-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 相关推荐 */
.recommendations {
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.recommendations-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.recommendations-list {
  white-space: nowrap;
}

.recommendation-item {
  display: inline-block;
  width: 300rpx;
  padding: 20rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid #e0e0e0;
  vertical-align: top;
  white-space: normal;
}

.recommendation-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.recommendation-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 快捷输入 */
.quick-inputs {
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.quick-inputs-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.quick-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.quick-button {
  padding: 15rpx 25rpx;
  background: #f0f0f0;
  border: none;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.quick-button:active {
  background: #e0e0e0;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 错误提示 */
.error-toast {
  position: fixed;
  top: 100rpx;
  left: 30rpx;
  right: 30rpx;
  background: #f44336;
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
  transform: translateY(-100rpx);
  opacity: 0;
  transition: all 0.3s ease;
}

.error-toast.show {
  transform: translateY(0);
  opacity: 1;
}

.error-toast-text {
  font-size: 26rpx;
}

.error-toast-close {
  font-size: 36rpx;
  font-weight: bold;
  cursor: pointer;
}
