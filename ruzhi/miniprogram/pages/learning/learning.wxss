/* 学习中心页面样式 */

.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 学习统计 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-overview {
  margin-top: 20rpx;
}

.stat-main {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 20rpx;
  color: white;
  margin-bottom: 20rpx;
}

.stat-number {
  font-size: 72rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.stat-item {
  text-align: center;
  padding: 25rpx 15rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 15rpx;
  color: white;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-name {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 学习进度 */
.progress-section {
  margin-bottom: 30rpx;
}

.progress-list {
  margin-top: 20rpx;
}

.progress-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.progress-item:last-child {
  border-bottom: none;
}

.progress-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.progress-info {
  flex: 1;
}

.progress-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.progress-desc {
  font-size: 24rpx;
  color: #666;
}

.progress-percentage {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-meta {
  display: flex;
  justify-content: space-between;
}

.progress-current,
.progress-category {
  font-size: 22rpx;
  color: #999;
}

/* 成就系统 */
.achievements-section {
  margin-bottom: 30rpx;
}

.achievements-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.achievement-item {
  text-align: center;
  padding: 25rpx 15rpx;
  border-radius: 20rpx;
  transition: transform 0.3s ease;
  position: relative;
}

.achievement-item.unlocked {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(240, 147, 251, 0.3);
}

.achievement-item.locked {
  background: #f8f9fa;
  color: #999;
  border: 2rpx solid #e8e8e8;
}

.achievement-item:active {
  transform: scale(0.95);
}

.achievement-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
}

.achievement-name {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.achievement-progress {
  margin-top: 15rpx;
}

.achievement-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.achievement-fill {
  height: 100%;
  background: #667eea;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.achievement-text {
  font-size: 20rpx;
  opacity: 0.8;
}

.achievement-date {
  font-size: 20rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.achievements-more {
  text-align: center;
  padding: 20rpx;
  margin-top: 20rpx;
  color: #667eea;
  font-size: 26rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 推荐系统 */
.recommendations-section {
  margin-bottom: 30rpx;
}

.recommendation-tabs {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 10rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
  color: #666;
}

.tab-item.active {
  background: #667eea;
  color: white;
  font-weight: bold;
}

.recommendation-content {
  margin-top: 20rpx;
}

.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recommendation-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
  transition: transform 0.3s ease;
}

.recommendation-item:active {
  transform: scale(0.98);
}

.recommendation-icon {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-right: 20rpx;
  color: white;
}

.recommendation-content {
  flex: 1;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recommendation-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.recommendation-meta {
  display: flex;
  gap: 20rpx;
}

.recommendation-difficulty,
.recommendation-time {
  font-size: 22rpx;
  color: #667eea;
}

.recommendation-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 学习计划 */
.plan-section {
  margin-bottom: 30rpx;
}

.plan-list {
  margin-top: 20rpx;
}

.plan-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: opacity 0.3s ease;
}

.plan-item.completed {
  opacity: 0.6;
}

.plan-item:last-child {
  border-bottom: none;
}

.plan-checkbox {
  margin-right: 20rpx;
}

.checkbox-icon {
  font-size: 40rpx;
}

.plan-content {
  flex: 1;
}

.plan-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.plan-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.plan-time {
  font-size: 22rpx;
  color: #999;
}

.empty-plan {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #666;
}

.empty-desc {
  font-size: 24rpx;
  line-height: 1.5;
}

/* 学习历史 */
.history-section {
  margin-bottom: 30rpx;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-right: 20rpx;
  color: white;
}

.history-content {
  flex: 1;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.history-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-points {
  font-size: 24rpx;
  font-weight: bold;
  color: #28a745;
}

.empty-history {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stat-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .achievements-grid {
    grid-template-columns: 1fr;
  }
  
  .recommendation-tabs {
    flex-direction: column;
    gap: 5rpx;
  }
}
