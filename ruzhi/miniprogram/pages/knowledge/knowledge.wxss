/* 知识图谱页面样式 */

.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 25rpx;
  font-size: 28rpx;
  background: #fff;
}

.search-input:focus {
  border-color: #667eea;
}

.search-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.search-icon {
  font-size: 32rpx;
}

/* 搜索结果 */
.search-results {
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.results-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background-color 0.3s ease;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background-color: #f8f9fa;
}

.result-content {
  flex: 1;
}

.result-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.result-definition {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.result-meta {
  display: flex;
  gap: 20rpx;
}

.result-category,
.result-relevance {
  font-size: 22rpx;
  color: #999;
}

.result-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 核心概念 */
.concepts-section {
  margin-bottom: 30rpx;
}

.concepts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.concept-item {
  text-align: center;
  padding: 25rpx 15rpx;
  background: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.concept-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  transform: scale(1.02);
}

.concept-item:active {
  transform: scale(0.98);
}

.concept-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.concept-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.concept-category {
  font-size: 22rpx;
  color: #667eea;
  margin-bottom: 15rpx;
}

.concept-importance {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.importance-bar {
  flex: 1;
  height: 8rpx;
  background: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
}

.importance-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.importance-text {
  font-size: 20rpx;
  color: #666;
}

/* 概念详情 */
.concept-details {
  margin-bottom: 30rpx;
}

.analysis-content {
  margin-top: 20rpx;
  background: #f8f9fa;
  padding: 25rpx;
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.analysis-meta {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e8e8e8;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #666;
}

.meta-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.concept-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 25rpx;
  flex-wrap: wrap;
}

.concept-actions .action-btn {
  flex: 1;
  min-width: 120rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
}

/* 相关概念 */
.related-section {
  margin-bottom: 30rpx;
}

.related-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 15rpx;
  margin-top: 20rpx;
}

.related-item {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(79, 172, 254, 0.1) 0%, rgba(0, 242, 254, 0.1) 100%);
  border-radius: 15rpx;
  border-left: 4rpx solid #4facfe;
  transition: transform 0.3s ease;
}

.related-item:active {
  transform: scale(0.98);
}

.related-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.related-definition {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.related-relation {
  display: flex;
  gap: 20rpx;
}

.relation-type,
.relation-strength {
  font-size: 22rpx;
  color: #4facfe;
}

/* 概念故事 */
.stories-section {
  margin-bottom: 30rpx;
}

.stories-list {
  margin-top: 20rpx;
}

.story-item {
  padding: 25rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(40, 167, 69, 0.05) 100%);
  border-radius: 15rpx;
  border-left: 4rpx solid #28a745;
}

.story-item:last-child {
  margin-bottom: 0;
}

.story-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.story-type {
  background: #28a745;
  color: white;
  padding: 5rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.story-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.story-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 15rpx;
}

.story-moral {
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(40, 167, 69, 0.2);
}

.moral-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #28a745;
}

.moral-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 学习路径 */
.learning-path-section {
  margin-bottom: 30rpx;
}

.path-overview {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
}

.path-summary {
  font-size: 26rpx;
  color: #666;
}

.stages-list {
  margin-top: 20rpx;
}

.stage-item {
  padding: 25rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.stage-item:last-child {
  margin-bottom: 0;
}

.stage-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.stage-number {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.stage-info {
  flex: 1;
}

.stage-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.stage-time {
  font-size: 22rpx;
  color: #666;
}

.stage-goal {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.stage-concepts {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.concept-tag {
  background: #667eea;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

/* 推荐概念 */
.recommendations-section {
  margin-bottom: 30rpx;
}

.recommendations-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 15rpx;
  margin-top: 20rpx;
}

.recommendation-item {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.1) 0%, rgba(245, 87, 108, 0.1) 100%);
  border-radius: 15rpx;
  border-left: 4rpx solid #f093fb;
  transition: transform 0.3s ease;
}

.recommendation-item:active {
  transform: scale(0.98);
}

.recommendation-content {
  width: 100%;
}

.recommendation-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recommendation-reason {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.recommendation-meta {
  display: flex;
  gap: 20rpx;
}

.recommendation-difficulty,
.recommendation-time {
  font-size: 22rpx;
  color: #f093fb;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .concepts-grid {
    grid-template-columns: 1fr;
  }
  
  .concept-actions {
    flex-direction: column;
  }
  
  .concept-actions .action-btn {
    flex: none;
  }
}
